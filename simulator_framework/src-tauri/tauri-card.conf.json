{
  "build": {
    "devPath": "../assets/asset-card",
    "distDir": "../assets/asset-card",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "card_simulator",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      }
    },
    "windows": [
      {
        "title": "card_simulator",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "cardsim",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [
        "../assets/asset-barcode/config.json"
      ]
    }
  }
}